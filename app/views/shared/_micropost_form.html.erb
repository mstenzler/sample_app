<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "Compose new micropost...", class: 'form-control micropost-textarea' %>
       <div class="help-block"><span id="text-counter"></span> chars available</div>
  </div>
  <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>
